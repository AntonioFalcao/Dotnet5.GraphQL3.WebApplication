@{
    ViewData["Title"] = "Product Detail";
    IEnumerable<ReviewModel> reviews = Model;
}

<h2>Reviews</h2>

<body>

@if (reviews.Any() is false)
{
    <h5>No reviews yet</h5>
}

@foreach (var review in reviews)
{
    <div class="row">
        <div class="col-12">
            <h5>@review.Title</h5>
        </div>
        <div class="col-12">
            <h6>@review.Comment</h6>
        </div>
    </div>
}
</body>