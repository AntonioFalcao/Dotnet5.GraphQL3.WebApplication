@{
    ViewBag.Title = "Add Review";
    var productId = Model.ProductId;
}

<body>
<form method="post" asp-action="AddReview">
    <div class="form-group">
        <label for="Title">Title</label>
        <input class="form-control form-control-lg" type="text" name="Title" id="Title" placeholder="Title">
    </div>
    <div class="form-group">
        <label for="Review">Review</label>
        <textarea class="form-control" name="Comment" id="Review" placeholder="Comment" rows="3"></textarea>
    </div>
    <input name="ProductId" type="hidden" value="@productId">
    <button type="submit" class="btn btn-primary">Add</button>
</form>
</body>