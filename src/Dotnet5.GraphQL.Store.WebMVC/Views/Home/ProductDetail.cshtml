@{
    ViewData["Title"] = "Product Detail";
    IEnumerable<ReviewModel> reviews = Model.Reviews;
}

<body>
<div class="product-list"></div>
<div class="product-dual-column">
    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-md-1 text-center">
                <div class="intro">
                    <h1 class="text-center">@Model.Name</h1>
                    <img class="img-fluid" src="@Model.PhotoUrl" alt="">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 col-lg-3 offset-md-1">
                <div class="details">
                    <p>Details</p>
                    <ul>
                        <li>
                            <p>Price: @Model.Price </p>
                        </li>
                        <li>
                            <p>Rating: @Model.Rating</p>
                        </li>
                        <li>
                            <p>Introduce at: @Model.IntroduceAt </p>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-10 col-lg-7 offset-md-1 offset-lg-0">
                <div class="text">
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <a asp-controller="Home" asp-action="ProductReview" asp-route-id="@Model.Id">
            <h4>Reviews</h4>
        </a>
    </div>

    @if (reviews?.Any() is false)
    {
        <h5>No reviews yet</h5>
    }
    else
    {
        @foreach (var review in Model.Reviews)
        {
            <div class="row">
                <div class="col-12">
                    <h5>@review.Title</h5>
                </div>
                <div class="col-12">
                    <h6>@review.Comment</h6>
                </div>
            </div>
        }
    }

    <a asp-action="AddReview" asp-route-productId="@Model.Id">Add a Review!</a>
</div>
</body>